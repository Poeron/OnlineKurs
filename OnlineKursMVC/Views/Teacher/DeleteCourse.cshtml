@model OnlineKurs.Shared.Models.Courses

<h2>Delete Course</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete the course "<strong>@Model.Title</strong>"?</p>
</div>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Teacher/Home" class="btn btn-secondary">Cancel</a>
</form>
