@model IEnumerable<OnlineKurs.Shared.Models.Courses>

@section Title {
    Home
}

<div class="jumbotron text-center bg-light p-5 mb-4">
    <h1 class="display-4">Welcome to OnlineKurs!</h1>
    <p class="lead">Discover and enroll in top-rated online courses. Learn and grow with us.</p>
    <a href="/Courses" class="btn btn-primary btn-lg">Explore Courses</a>
</div>

<!-- Recent Courses -->
<div class="container">
    <h2 class="mb-4">Recent Courses</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var course in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text">@course.Description</p>
                            <a href="/Courses/Details/@course.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No courses available at the moment. Check back later!</p>
        }
    </div>
</div>
